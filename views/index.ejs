<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <header>
        <h1>Spotify</h1>
        <nav>
        </nav>
    </header>

    <main>
      

        <!-- Upload Section -->
        <section class="upload-section" id="upload">
            <h2>Upload </h2>
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <input type="file" name="mp3file" accept="audio/mp3">
                <button type="submit">Upload MP3</button>
            </form>

        </section>

<!-- Featured Playlists Section -->
<section class="featured-playlists" id="playlists">
    <h2>List Songs</h2>
    <ul>
        <% songs.forEach(function(song) { %>
            <li>
                <%= song.filename %> (ID: <%= song.id %>)
                <audio controls>
                    <source src="/uploads/<%= song.filename %>" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
                <form action="/delete" method="POST" style="display:inline;">
                    <input type="hidden" name="song" value="<%= song.filename %>">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
</section>

    </main>
</body>
</html>